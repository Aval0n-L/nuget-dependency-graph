<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- .NET Tool configuration -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>ngraph</ToolCommandName>
    <PackageId>NugetDependencyGraph</PackageId>
    <Version>1.0.0</Version>
    <Authors>Avalon.L</Authors>
    <Description>Visualize NuGet package dependencies as a graph</Description>
    <PackageProjectUrl>https://github.com/Aval0n-L/nuget-dependency-graph</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/Aval0n-L/nuget-dependency-graph</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

</Project>